@model IEnumerable<ShoppingWebsite.Models.Product>
<h1>Sản phẩm</h1>
<form>
    <select name="sortOrder" onchange="this.form.submit()">
        <option value="">Sắp xếp</option>
        <option value="price_asc">Giá tăng dần</option>
        <option value="price_desc">Giá giảm dần</option>
    </select>
    <input type="text" name="searchString" placeholder="Tìm kiếm..." />
    <button type="submit">Tìm kiếm</button>


</form>

<div class="product-container">
    @foreach (var product in Model)

    {
        <div class="product-card">
            <a href="@Url.Action("Details", new { id = product.Id })">
                <img src="@product.Image" class="product-image" alt="@product.Name" />
            </a>
            <div class="product-body">
                <h5 class="product-name">@product.Name</h5>
                <p class="product-price">Giá: @product.Price VND</p>
                <!-- Flexbox để căn chỉnh nút -->
                <div class="button-container">
                    <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">Chi tiết</a>
                    <form asp-action="AddToCart" asp-controller="Cart" method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-secondary">Thêm vào giỏ hàng</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<footer class="text-center py-3">
    <p>© 2024 Your Website. All rights reserved.</p>
</footer>

<style>
    /* Container for product cards */
    .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    /* Each product card */
    .product-card {
        width: 30%;
        display: flex;
        flex-direction: column;
        border: 2px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        height: 100%;
        padding: 10px;
    }

    /* Product image */
    .product-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 4px;
    }

    /* Product body */
    .product-body {
        padding: 15px;
        display: flex;
        flex-grow: 1;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Product name */
    .product-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    /* Product price */
    .product-price {
        font-size: 16px;
        margin-bottom: 10px;
    }

    /* Button container */
    .button-container {
        display: flex;
        gap: 10px;
        justify-content: flex-start;
        align-items: center; /* Align buttons vertically centered */
    }

    /* Detail button */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        display: inline-block; /* Ensures the button aligns properly */
    }

    /* Add to cart button */
    .btn-secondary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        display: inline-block; /* Ensures the button aligns properly */
    }

        /* Button hover effect */
        .btn-primary:hover, .btn-secondary:hover {
            opacity: 0.8;
        }

    select {
        width: 200px; /* Chiều rộng của dropdown */
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #f9f9f9; /* Màu nền */
        font-size: 16px;
        color: #333; /* Màu chữ */
        appearance: none; /* Xóa kiểu mặc định của trình duyệt */
        cursor: pointer;
    }

        /* Hover và focus cho dropdown */
        select:hover {
            border-color: #007bff; /* Đổi màu viền khi hover */
        }

        select:focus {
            outline: none; /* Xóa border xanh của trình duyệt */
            border-color: #007bff;
            box-shadow: 0 0 4px rgba(0, 123, 255, 0.5); /* Hiệu ứng ánh sáng khi focus */
        }

    /* Các tùy chọn bên trong dropdown */
    option {
        font-size: 16px;
        padding: 10px; /* Khoảng cách bên trong mỗi tùy chọn */
        color: #333;
        background-color: #fff;
    }

        /* Khi di chuột qua một option */
        option:hover {
            background-color: #007bff; /* Màu nền khi hover */
            color: #fff; /* Màu chữ khi hover */
        }
</style>
