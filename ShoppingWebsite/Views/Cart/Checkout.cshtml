@model ShoppingWebsite.Models.Customer

<h2>Xác nhận thông tin đặt hàng</h2>

<form asp-action="ConfirmOrder" method="post">
    <div class="form-group">
        <label asp-for="FullName">Họ và tên</label>
        <input asp-for="FullName" class="form-control" readonly /> <!-- Không cho phép chỉnh sửa tên -->
    </div>

    <div class="form-group">
        <label asp-for="Address">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
        <input type="hidden" asp-for="Role" value="@Model.Role" />
        <input type="hidden" asp-for="Email" value="@Model.Email" />
        <input type="hidden" asp-for="Password" value="@Model.Password" />
        <input type="hidden" asp-for="Username" value="@Model.Username" />
    </div>

    <button type="submit" class="btn btn-primary">Xác nhận đặt hàng</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
