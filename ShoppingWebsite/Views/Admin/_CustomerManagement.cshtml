@model IEnumerable<Customer>

<h2>Quản lý Khách Hàng</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Username</td>
                <td>@customer.Email</td>
                <td>@customer.Role</td>
                <td>
                    <div class="action-buttons d-flex align-items-center gap-2">
                        <a asp-action="CreateCustomer" class="btn btn-success btn-custom">Thêm Khách Hàng</a>
                        <a href="@Url.Action("EditCustomer", "Admin", new { id = customer.Id })" class="btn btn-warning btn-custom">Sửa</a>
                        <form asp-action="DeleteCustomer" asp-controller="Admin" method="post" class="mb-0">
                            <input type="hidden" name="id" value="@customer.Id" />
                            <button class="btn btn-danger btn-custom" type="submit">Xóa</button>
                        </form>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Container Flexbox */
    .action-buttons {
        display: flex;
        align-items: center; /* Căn giữa các nút theo chiều dọc */
        gap: 10px; /* Khoảng cách giữa các nút */
    }

    /* Đồng bộ kích thước nút */
    /* Đồng bộ kích thước nút */
    .btn-custom {
        display: flex; /* Kích hoạt Flexbox */
        justify-content: center; /* Canh giữa theo chiều ngang */
        align-items: center; /* Canh giữa theo chiều dọc */
        width: 120px; /* Chiều rộng đồng nhất */
        height: 40px; /* Chiều cao đồng nhất */
        font-size: 14px; /* Đồng bộ kích thước chữ */
        padding: 0; /* Xóa padding mặc định */
        text-align: center; /* Căn chữ nằm giữa */
        border-radius: 4px; /* Bo góc nhẹ */
        white-space: nowrap; /* Ngăn chữ xuống dòng */
    }


    /* Xóa margin và padding mặc định của form */
    .action-buttons form {
        margin: 0;
        padding: 0;
    }

    /* Tùy chỉnh thêm cho nút Xóa nếu cần */
    .btn-delete {
        background-color: #dc3545; /* Màu đỏ */
        color: white;
        border: 1px solid #dc3545;
    }

</style>
