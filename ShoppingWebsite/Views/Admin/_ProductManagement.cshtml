@model IEnumerable<Product>

<h2>Quản lý Sản Phẩm</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            
            
            <th>Ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
               
               
                <td>
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="@product.Image" alt="Sản phẩm" style="width:100px; height:100px;" />
                    }
                </td>
                <td>
                    <div class="action-buttons d-flex align-items-center gap-2">
                        <a asp-action="CreateProduct" class="btn btn-success btn-custom">Thêm sản phẩm</a>
                        <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-warning btn-custom">Sửa</a>
                        <form asp-action="DeleteProduct" asp-controller="Admin" method="post" class="mb-0">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button class="btn btn-danger btn-custom" type="submit">Xóa</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
