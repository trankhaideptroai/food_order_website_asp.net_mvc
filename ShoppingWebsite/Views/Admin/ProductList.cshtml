@model IEnumerable<ShoppingWebsite.Models.Product>

<h2>Danh sách sản phẩm</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Giá</th>
       
           
            <th>Danh mục</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>
                    <img src="@product.Image" alt="@product.Name" style="width:100px;" />
                </td>
                <td>@product.Price.ToString("C")</td>
               
               
                <td>@product.CategoryId</td>
                <td>@product.Description</td>
                <td>
                    <a class="btn btn-warning" asp-action="EditProduct" asp-route-id="@product.Id">Chỉnh sửa</a>
                    <a class="btn btn-danger" asp-action="DeleteProduct" asp-route-id="@product.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="CreateProduct">Thêm sản phẩm</a>
<style>    /* Container and Header styling */
    h2 {
        text-align: center;
        font-size: 28px;
        color: #333;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    /* Table styling */
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        font-size: 16px;
    }

        .table th {
            background-color: #007bff;
            color: #fff;
            padding: 12px;
            text-align: left;
        }

        .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }

    /* Alternate row color for readability */
    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-striped tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Product image styling */
    .table img {
        max-width: 100px;
        height: auto;
        border-radius: 4px;
    }

    /* Button styling */
    .btn {
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: #333;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Add product button styling */
    a.btn-primary {
        display: inline-block;
        margin-top: 15px;
        margin-bottom: 15px;
    }
</style>